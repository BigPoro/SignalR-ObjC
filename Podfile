project 'SignalR.Client.ObjC/SignalR.Client.ObjC.xcodeproj'
workspace 'SignalR.Client.ObjC'

target "SignalR.Client.iOS" do
    use_frameworks!
    platform :ios, '8.0'
    
    pod 'AFNetworking/NSURLSession', '2.6.3'
    pod 'AFNetworking/Reachability', '2.6.3'
    pod 'AFNetworking/Security', '2.6.3'
    pod 'AFNetworking/Serialization', '2.6.3'
    pod 'AFNetworking/NSURLConnection', '2.6.3'

    pod 'SocketRocket', '0.5.1'
    
    target "SignalR.Client.iOSTests" do
        pod 'OCMock'
    end
end

target :"SignalR.Client.OSX" do
    use_frameworks!
    platform :osx, '10.9'
    
    pod 'AFNetworking/NSURLSession', '2.6.3'
    pod 'AFNetworking/Reachability', '2.6.3'
    pod 'AFNetworking/Security', '2.6.3'
    pod 'AFNetworking/Serialization', '2.6.3'
    pod 'AFNetworking/NSURLConnection', '2.6.3'

    pod 'SocketRocket', '0.5.1'
    
    target :"SignalR.Client.OSXTests" do
        pod 'OCMock'
    end
end
